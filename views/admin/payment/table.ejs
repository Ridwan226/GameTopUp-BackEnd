<table id="example1" class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>No</th>
      <th>Type</th>
      <th>Banks</th>
      <th>Status</th>
      <th>Acction</th>
    </tr>
  </thead>
  <tbody>
    <% for (let i = 0; i < payment.length; i++) { %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= payment[i].type %></td>
      <td>
        <% payment[i].banks.forEach(bank => {  %>
        <span class="badge badge-info">
          <%= bank.name %> 
        </span>
        <% }) %>
      </td>
      <td>
        <% if(payment[i].status === 'Y') { %>
        <span class="badge badge-info">
          Active
        </span>
        <% } else { %>
        <span class="badge badge-danger">
          no Active
        </span>
        <% }  %>

      </td>
      <td>
        <form action="/payment/status/<%= payment[i]._id %>?_method=PUT" method="post" style="display: inline-block;">
          <button class="btn btn-primary btn-sm">
            <% if(payment[i].status === 'Y') { %>
            Matikan
            <% } else { %>
            Hidupkan
            <% }  %>
          </button>
        </form>
        <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-warning btn-sm"> <i
            class="fa fa-pencil-alt"></i></a>
        <form style="display: inline-block;" action="/payment/del/<%= payment[i]._id %>?_method=DELETE" method="post">

          <button class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></button>
        </form>
      </td>
    </tr>
    <% } %>
    </tfoot>
</table>