<%- include ../../partial/header.ejs %>
<%- include ../../partial/navbar.ejs %>
<%- include ../../partial/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank Edit</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank </a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3>Form Bank Edit</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <form action="/bank/update/<%= bank._id %>?_method=PUT" method="post">
                <div class="card-body">
                  <div class="form-group">
                    <label for="Name Account">Name Account</label>
                    <input type="text" name="name" class="form-control" value="<%= bank.name %>" placeholder="Enter Name Account">
                  </div>
                   <div class="form-group">
                    <label for="Name Account">Name Bank</label>
                    <input type="text" name="nameBank" class="form-control" value="<%= bank.nameBank %>" placeholder="Enter Name Bank">
                  </div>
                   <div class="form-group">
                    <label for="Name Account">No Rekening</label>
                    <input type="text" name="noRekening" class="form-control" value="<%= bank.noRekening %>" placeholder="Enter No Rekening">
                  </div>
                  
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
                <!-- /.card-body -->
              </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->


