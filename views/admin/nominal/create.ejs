<%- include ../../partial/header.ejs %>
<%- include ../../partial/navbar.ejs %>
<%- include ../../partial/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/category">Nominal</a></li>
            <li class="breadcrumb-item active">Add</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card">
            <div class="card-header">
              <h3>Form Nominal</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <form action="/nominal/create" method="post">
                <div class="card-body">
                  <div class="form-group">
                    <label>Nama Koin</label>
                    <select class="form-control select2" name="coinName" required style="width: 100%;">
                      <option selected="selected">Pilih Koin</option>
                      <option value="Gold" >Gold</option>
                      <option value="Diamond" >Diamond</option>
                      <option value="Jewel" >Jewel</option>
                    </select>
                  </div>
               
                  <div class="form-group">
                    <label for="Jumlah Koin">Jumlah Koin</label>
                    <input type="number" name="coinQuantity" class="form-control" placeholder="Enter Jumlah Koin">
                  </div>
                
                  <div class="form-group">
                    <label for="Price Koin">Jumlah Price</label>
                    <input type="number" name="price" class="form-control" placeholder="Enter Jumlah Price">
                  </div>
                  <button type="submit" class="btn btn-primary">Simpan</button>
                </div>
                <!-- /.card-body -->
              </form>
            </div>
            <!-- /.card-body -->
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->


